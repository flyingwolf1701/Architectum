<?xml version="1.0"?>
<Application name="sample_app" domain="backend">
  <Component name="api/auth" description="Handles authentication endpoints">
    <Function name="login" method="POST" path="/api/auth/login">
      <Description>Authenticates a user with username and password</Description>
      <Returns type="AuthResponse" reference="models.AuthResponse" />
      <Calls>
        <Call>services.auth_service.authenticate_user</Call>
      </Calls>
      <CalledBy>
        <Called>ui/login.tsx.submitLogin</Called>
      </CalledBy>
    </Function>

    <Type name="AuthResponse" kind="object">
      <Property name="access_token" type="string" required="true" />
      <Property name="token_type" type="string" required="true" />
    </Type>
  </Component>
</Application>
